{
  "variables": {
    "is_patapsco": "false",
    "aws_access_key": "",
    "aws_secret_key": "",
    "chas_ssh_key": "",
    "frank_ssh_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-967edcff",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "aptible-{{timestamp}}",
      "ami_description": "Basebox, generated with Packer.",
      "ami_groups": ["admins"],
      "security_group_id": "sg-29214a42",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "12.04-LTS",
        "Security Group": "SSH Only"
      }
    },
    {
      "type": "virtualbox",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "iso_checksum": "2cbe868812a871242cdcdd8f2fd6feb9",
      "iso_checksum_type": "md5",
      "ssh_username": "packer",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "config/patapsco/patapsco_issue.net",
      "destination": "/tmp/patapsco_issue.net"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 10"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/patapsco.sh"
      ],
      "environment_vars": [
        "is_patapsco={{user `is_patapsco`}}",
        "chas_ssh_key={{user `chas_ssh_key`}}",
        "frank_ssh_key={{user `frank_ssh_key`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [
        "virtualbox"
      ]
    }
  ]
}
